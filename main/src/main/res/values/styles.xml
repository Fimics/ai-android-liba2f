<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="NeonButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#22CCF6</item>
        <item name="android:textSize">50sp</item>
        <item name="android:background">@drawable/btn_neon_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">90dp</item>
    </style>

    <style name="NeonButtonStyle_small" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#22CCF6</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/btn_neon_small_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">50dp</item>
    </style>

    <style name="NeonButtonStyle_small_reset" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#22CCF6</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/btn_neon_small_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_margin">50dp</item>
    </style>

    <style name="EmotionButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#E4F1EC</item>
        <item name="android:textSize">50sp</item>
        <item name="android:background">@drawable/btn_eomotion_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>、、、、、、、、、、、、
        <item name="android:padding">12dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="EmotionButtonStyle_small" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#E4F1EC</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/btn_eomotion_small_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>、、、、、、、、、、、、
        <item name="android:padding">8dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="SettingsItemStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#E4F1EC</item>
        <item name="android:textSize">35sp</item>
        <item name="android:background">@drawable/btn_settings_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="SettingsItemStyle_small" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#E4F1EC</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_settings_bg_small</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">2dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="LiveButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#22CCF6</item>
        <item name="android:textSize">35sp</item>
        <item name="android:background">@drawable/btn_neon_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">50dp</item>
    </style>

    <style name="LiveButtonStyle_small" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#22CCF6</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/btn_neon_small_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:elevation">6dp</item>
