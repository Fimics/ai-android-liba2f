    <style name="ChatItemStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#E4F1EC</item>
        <item name="android:textSize">35sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="CheckboxStyleRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="CheckboxStyleRadioButton_small" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/checkbox_selector_small</item>
    </style>


</resources>
